@{
    ViewData["Title"] = "Book List";
}

@model BooksViewModel

<h1>Online Bookstore</h1>

<table class="table table-responsive table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>Page Count</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book b in Model.Books)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Publisher</td>
                <td>@b.Isbn</td>
                <td>@b.Classification</td>
                <td>@b.Category</td>
                <td>@b.PageCount</td>
                <td>$@b.Price</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination" page-model="@Model.PageInfo" page-action="Index"></div>